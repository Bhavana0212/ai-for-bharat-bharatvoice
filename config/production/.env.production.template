# Production Environment Variables Template for BharatVoice Assistant
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-production-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bharatvoice:password@localhost:5432/bharatvoice_prod
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0

# =============================================================================
# EXTERNAL API KEYS - INDIAN RAILWAYS
# =============================================================================
# Primary Indian Railways API (https://railwayapi.com/)
INDIAN_RAILWAYS_API_KEY=your_railway_api_key_here

# Fallback providers
IRCTC_CONNECT_API_KEY=your_irctc_connect_api_key
CONFIRMTKT_API_KEY=your_confirmtkt_api_key

# =============================================================================
# WEATHER SERVICE API KEYS
# =============================================================================
# OpenWeatherMap (Primary)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key

# Indian Meteorological Department
IMD_API_KEY=your_imd_api_key

# AccuWeather
ACCUWEATHER_API_KEY=your_accuweather_api_key

# Weather Underground
WEATHER_UNDERGROUND_API_KEY=your_weather_underground_api_key

# =============================================================================
# DIGITAL INDIA PLATFORM
# =============================================================================
# Digital India API Gateway
DIGITAL_INDIA_API_KEY=your_digital_india_api_key
DIGITAL_INDIA_CLIENT_ID=your_digital_india_client_id
DIGITAL_INDIA_CLIENT_SECRET=your_digital_india_client_secret

# Service-specific API keys
AADHAAR_VERIFICATION_API_KEY=your_aadhaar_verification_key
PAN_VERIFICATION_API_KEY=your_pan_verification_key
PASSPORT_API_KEY=your_passport_api_key
DRIVING_LICENSE_API_KEY=your_driving_license_api_key

# =============================================================================
# UPI PAYMENT GATEWAYS
# =============================================================================
# Razorpay (Primary)
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# PayU (Fallback)
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_merchant_salt

# Paytm
PAYTM_MERCHANT_ID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key

# =============================================================================
# FOOD DELIVERY PLATFORM INTEGRATIONS
# =============================================================================
# Swiggy Partner API
SWIGGY_PARTNER_ID=your_swiggy_partner_id
SWIGGY_API_KEY=your_swiggy_api_key
SWIGGY_WEBHOOK_URL=https://your-domain.com/webhooks/swiggy

# Zomato Partner API
ZOMATO_PARTNER_ID=your_zomato_partner_id
ZOMATO_API_KEY=your_zomato_api_key

# Uber Eats
UBER_EATS_CLIENT_ID=your_uber_eats_client_id
UBER_EATS_CLIENT_SECRET=your_uber_eats_client_secret

# =============================================================================
# RIDE SHARING PLATFORM INTEGRATIONS
# =============================================================================
# Ola Cabs
OLA_CLIENT_ID=your_ola_client_id
OLA_CLIENT_SECRET=your_ola_client_secret

# Uber
UBER_CLIENT_ID=your_uber_client_id
UBER_CLIENT_SECRET=your_uber_client_secret

# Rapido
RAPIDO_API_KEY=your_rapido_api_key

# =============================================================================
# SERVICE BOOKING PLATFORMS
# =============================================================================
# Urban Company
URBAN_COMPANY_PARTNER_ID=your_urban_company_partner_id
URBAN_COMPANY_API_KEY=your_urban_company_api_key

# JustDial
JUSTDIAL_API_KEY=your_justdial_api_key

# =============================================================================
# ENTERTAINMENT AND NEWS APIs
# =============================================================================
# Cricket APIs
CRICAPI_API_KEY=your_cricapi_key
ESPN_CRICINFO_API_KEY=your_espn_cricinfo_key

# News and Bollywood
NEWS_API_KEY=your_news_api_key
TMDB_API_KEY=your_tmdb_api_key

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Application monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/bharatvoice/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY AND COMPLIANCE
# =============================================================================
# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com
CORS_METHODS=GET,POST,PUT,DELETE

# Feature flags
ENABLE_OFFLINE_MODE=true
ENABLE_CODE_SWITCHING=true
ENABLE_CULTURAL_CONTEXT=true

# =============================================================================
# AUDIO AND SPEECH PROCESSING
# =============================================================================
# Whisper model configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
TTS_ENGINE=gtts

# Audio processing
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_MAX_LENGTH=300
AUDIO_NOISE_REDUCTION=0.5
SPEECH_RECOGNITION_TIMEOUT=30.0

# =============================================================================
# PRODUCTION INFRASTRUCTURE
# =============================================================================
# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/bharatvoice.crt
SSL_KEY_PATH=/etc/ssl/private/bharatvoice.key

# Load balancer health check
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# Backup and disaster recovery
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups/bharatvoice

# =============================================================================
# KUBERNETES/DOCKER CONFIGURATION
# =============================================================================
# Container resource limits
MEMORY_LIMIT=2Gi
CPU_LIMIT=1000m
MEMORY_REQUEST=1Gi
CPU_REQUEST=500m

# Scaling configuration
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70

# =============================================================================
# EXTERNAL SERVICE TIMEOUTS AND LIMITS
# =============================================================================
# Global timeout settings
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30
TOTAL_TIMEOUT=60

# Rate limiting
DEFAULT_RATE_LIMIT_RPM=60
BURST_ALLOWANCE=10

# Cache settings
CACHE_DEFAULT_TTL=3600
MAX_CACHE_SIZE=100MB