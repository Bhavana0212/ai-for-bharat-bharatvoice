# BharatVoice Assistant Environment Configuration

# Application Settings
APP_NAME="BharatVoice Assistant"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]

# Database Settings
DATABASE_URL=sqlite:///./bharatvoice.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5.0

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_MAX_LENGTH=300
AUDIO_NOISE_REDUCTION=0.5

# Speech Recognition and Synthesis Settings
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
TTS_ENGINE=gtts
SPEECH_RECOGNITION_TIMEOUT=30.0

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=

# External Service API Keys
INDIAN_RAILWAYS_API_KEY=
WEATHER_API_KEY=
UPI_GATEWAY_URL=
CRICKET_API_KEY=

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_CODE_SWITCHING=true
ENABLE_CULTURAL_CONTEXT=true